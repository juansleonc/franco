{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://franco.app/schemas/contract.schema.json",
  "title": "Contract",
  "type": "object",
  "properties": {
    "id": { "type": "string", "format": "uuid" },
    "propertyId": { "type": "string", "format": "uuid" },
    "ownerId": { "type": "string", "format": "uuid" },
    "tenantId": { "type": "string", "format": "uuid" },
    "type": { "type": "string", "enum": ["lease", "management"] },
    "startDate": { "type": "string", "format": "date" },
    "endDate": { "type": "string", "format": "date" },
    "rentAmount": { "type": "number", "minimum": 0 },
    "currency": { "type": "string" },
    "adminFeeType": { "type": "string", "enum": ["fixed", "percentage"] },
    "adminFeeValue": { "type": "number", "minimum": 0 },
    "depositAmount": { "type": "number", "minimum": 0 },
    "paymentDueDay": { "type": "integer", "minimum": 1, "maximum": 28 },
    "penaltyPolicy": { "type": "object" },
    "terms": { "type": "string" }
  },
  "required": ["id", "propertyId", "ownerId", "type", "startDate", "endDate", "currency"],
  "additionalProperties": false
}
