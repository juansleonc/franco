{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://franco.app/schemas/tenant.schema.json",
  "title": "Tenant",
  "type": "object",
  "properties": {
    "id": { "type": "string", "format": "uuid" },
    "fullNameOrLegalName": { "type": "string" },
    "documentType": { "type": "string", "enum": ["nationalId", "passport", "taxId"] },
    "documentNumber": { "type": "string" },
    "email": { "type": "string", "format": "email" },
    "phone": { "type": "string" },
    "address": { "type": "string" },
    "emergencyContact": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "phone": { "type": "string" }
      },
      "additionalProperties": false
    }
  },
  "required": ["id", "fullNameOrLegalName", "documentType", "documentNumber"],
  "additionalProperties": false
}
